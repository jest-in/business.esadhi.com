meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Clients | esadhi
link(rel="icon", type="image/x-icon", href="/Source/favicon.svg")
link(rel="stylesheet", href="/CSS/style.css")
link(rel="stylesheet", href="/CSS/media-query.css")
.dashboard-container
  if(popup)
    if(popup==="success")
      include ../Components/_success.pug
  nav.dash-nav-container
    a.nav-logo-div(href="/admin/dashboard")
      img(src="/Source/Logo.svg", alt)
    a.nav-items-container.nav-items-container-selected(href="/admin/dashboard")
      .nav-items-icon-div
        img.nav-items-icon-selected(src="/Source/clientsIcon.svg", alt="overview icon")
      .nav-items-name-div
        h2.nav-items-selected Clients
    a.nav-items-container(href="/admin/add-client")
      .nav-items-icon-div
        img(src="/Source/addClientIcon.svg", alt="completed rewards icon")
      .nav-items-name-div
        h2 Add Client
    a.nav-items-container(href="/admin/approved-clients")
      .nav-items-icon-div
        img(src="/Source/approvedClientsIcon.svg", alt="completed rewards icon")
      .nav-items-name-div
        h2 Approved Clients
    a.nav-items-container(href="/admin/pending-approvals")
      .nav-items-icon-div
        img(src="/Source/approveIcon.svg", alt="completed rewards icon")
      .nav-items-name-div
        h2 Pending Approvals
    a.nav-items-container(href="/admin/completed-rewards")
      .nav-items-icon-div
        img(src="/Source/completedRewardsIcon.svg", alt="completed rewards icon")
      .nav-items-name-div
        h2 Completed Rewards
    a.nav-items-container(href="/admin/reset-password")
      .nav-items-icon-div
        img(src="/Source/resetPasswordIcon.svg", alt="completed rewards icon")
      .nav-items-name-div
        h2 Reset Password
  .dashboard-content-container
    .dashboard-content-header-div
      h1 Clients
      h3
        | Hello 
        span Admin
        | !!!
      img#logout-icon-btn(src="/Source/logoutIcon.svg", alt="logout icon")
      
    block content
          
each url in scripts
    script(src=url)   