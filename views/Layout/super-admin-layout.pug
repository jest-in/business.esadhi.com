meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Dashboard | esadhi
link(rel="icon", type="image/x-icon", href="/Source/favicon.svg")
link(rel="stylesheet", href="/CSS/style.css")
